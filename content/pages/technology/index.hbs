<div class="facts-page">

  <div class="fancy-cover">
    <div class="container">
      <div class="row facts-page-introduction">
        <div class="col-md-6 col-sm-12">
          <div class="fact-section-image">
            <img src="{{introduction.image}}" alt="Aptible's Technology" class="technology-introduction-image" />
          </div>
        </div>
        <div class="col-md-6 col-sm-12">
          <h2>{{introduction.title}}</h2>
          <div class='introduction-body'>{{#markdown}}{{introduction.body}}{{/markdown}}</div>
        </div>
      </div>
    </div>
  </div>

  <div class="highlight-panel">
    <div class="container">

      <div class="row section bordered callout-section">
        <div class="col-md-10 col-md-offset-1 col-sm-12 our-philosophy">
          <h2 class="callout-title">{{philosophy.title}}</h2>
          <div class="philosophy-body callout-body">{{#markdown}}{{philosophy.body}}{{/markdown}}</div>
        </div>
      </div>

      <div class="row section bordered">
        <h1 class="how-aptible-technology-works">{{how_it_works.title}}</h1>

        <div class="col-md-6 col-sm-12">
          {{> ci_console}}

        </div>
        <div class="col-md-4 col-md-offset-1 col-sm-12">
          <h2 class="fact-section-title workflow-title">{{workflow.title}}</h2>
          <div class="fact-section-body workflow-body">{{#markdown}}{{workflow.body}}{{/markdown}}</div>
        </div>
      </div>

      <div class="row section bordered">
        <div class="col-md-5 col-sm-12">
          <div class="fact-section how-it-works-section networking">
            <h2>{{networking.title}}</h2>
            <div class="fact-section-body how-it-works-body ">{{#markdown}}{{networking.body}}{{/markdown}}</div>
          </div>
          <div class="fact-section how-it-works-section routing">
            <h2>{{routing.title}}</h2>
            <div class="fact-section-body how-it-works-body">{{#markdown}}{{routing.body}}{{/markdown}}</div>
          </div>
        </div>
        <div class="col-md-6 col-md-offset-1 col-sm-12">
          <div class="fact-section-image">
            <img src="{{how_it_works.img}}" alt="How Aptible Works" />
          </div>
        </div>
      </div>

      <div class="row section bordered">
        <div class="col-md-6 col-sm-12">
          <div class="fact-section-image">
            <img src="{{containers.img}}" alt="Aptible Containers" class="containers-image" />
          </div>
        </div>

        <div class="col-md-5 col-md-offset-1 col-sm-12">
          <div class="fact-section container-section">
            <h2>{{containers.title}}</h2>
            <div class="fact-section-body containers">{{#markdown}}{{containers.body}}{{/markdown}}</div>
          </div>
        </div>
      </div>

      <div class="row section bordered callout-section">
        <div class="col-md-10 col-md-offset-1 col-sm-12 apps-and-databases">
          <h2 class="callout-title">{{apps.title}}</h2>
          <div class="apps-body callout-body">{{#markdown}}{{apps.body}}{{/markdown}}</div>
          <div class="row apps-list">
            {{#each apps.logos}}
              <div class="col-md-3 col-sm-12">
                <div class="app-icon-container {{className}}">
                  <img src="{{url}}" alt="{{className}}" />
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>

      <div class="row section">
        <div class="facts-page-cta col-md-8 col-md-offset-2 col-sm-12">
          <h2 class="cta-title">{{cta.title}}</h2>
          <a class="btn btn-primary btn-lg" href="{{config.dashboard_signup_url}}">{{cta.button}}</a>
        </div>
      </div>

    </div>
  </div>

  <div class="row newsletter-section">
    <div class="col-md-6 col-md-offset-3 col-sm-12">
      <div class="panel panel-default newsletter-signup-panel">
        <div class="panel-body">
          <h1 class="panel-title">{{newsletter.title}}</h1>
          <h5 class="panel-sub">{{newsletter.subtitle}}</h5>
          <div class="panel-cta">
           {{> newsletter_signup}}
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
