<div class="container">
  <div class="row section bordered callout-section">
    <div class="col-md-10 col-md-offset-1 col-sm-12 our-philosophy">
      <h2 class="callout-title">{{hero_title}}</h2>
      <div class="callout-body">{{hero_sub_title}}</div>
      <div class="callout-cta">
        <a href="{{hero_url}}" class="btn btn-lg btn-primary">{{hero_cta}}</a>
      </div>
    </div>
  </div>

  <div class="row section">
    <div class="col-xs-12">
      <h2 class="section-title">{{plans_title}}</h2>
      <div class="plans">
        <div class="row">
          {{#each plans}}
            <div class="col-md-4 col-xs-12 col-sm-6">
              <div class="panel panel-default plan-panel {{plan}}">
                <div class="plan-title">{{plan}}</div>
                <div class="plan-header">
                  <h3 class="plan-plan">{{tag}}</h3>
                    <h2 class="plan-price">{{price}}<span class="sub">{{price_sub}}</span></h2>
                </div>
                <div class="panel-body">
                  <ul class="plan-attributes">
                    {{#each items}}
                      {{#if subs}}
                        <li>
                          {{item}}
                          <ul class="plan-sub-attributes">
                            {{#each subs}}
                              <li><i class="fa fa-check"></i>{{.}}</li>
                            {{/each}}
                          </ul>
                        </li>
                      {{else}}
                        <li>{{.}}</li>
                      {{/if}}

                    {{/each}}
                  </ul>
                  <div class="plan-cta">
                    <a href="{{cta_url}}" class="btn btn-lg btn-primary btn-block">
                    {{cta}}
                    </a>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
        <h2 id="unit-pricing" class="section-title">Unit Pricing</h2>
        <div class="panel-body">
          <ul class="plan-attributes">
            <li><span>Containers:</span> {{pricing.container}}</li>
            <li><span>Disk:</span> {{pricing.disk}}</li>
            <li><span>Domains:</span> {{pricing.domain}}</li>
