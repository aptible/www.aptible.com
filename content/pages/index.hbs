<div class="container">
  <div class="row about-billboard">
    <div class="col-md-10 col-md-offset-1 col-sm-12">
      <h1>{{about.h1}}</h1>
      <h2>{{about.h2}}</h2>
    </div>
  </div>

  <div class="feature-split">
    <div class="panel panel-default">
      <div class="row">
        <div class="col-md-6 col-sm-12">
          <div class="feature-split-col deployment">
            <div class="feature-image">
              <img src="{{feature_split.deployment.image}}" alt="{{feature_split.deployment.title}}" />
            </div>
            <div class="feature-info">
              <h2 class="feature-title">{{feature_split.deployment.title}}</h2>
              <div class="feature-body">{{feature_split.deployment.body }}</div>
              {{#if feature_split.deployment.cta}}
              <div class="feature-cta">
                <a href="{{feature_split.deployment.cta.href}}">{{feature_split.deployment.cta.text}}</a>
              </div>
              {{/if}}
            </div>
          </div>
        </div>

        <div class="divider"></div>
        <div class="plus">
          <span class="glyphicon glyphicon-plus"></span>
        </div>

        <div class="col-md-6 col-sm-12">
          <div class="feature-split-col compliance">
            <div class="feature-image">
              <img src="{{feature_split.compliance.image}}" alt="{{feature_split.compliance.title}}" />
            </div>
            <div class="feature-info">
              <h2 class="feature-title">{{feature_split.compliance.title}}</h2>
              <div class="feature-body">{{feature_split.compliance.body }}</div>
              {{#if feature_split.compliance.cta}}
              <div class="feature-cta">
                <a href="{{feature_split.compliance.cta.href}}">{{feature_split.compliance.cta.text}}</a>
              </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class="row section bordered aptible-benefits">
    <h1>Benefits of Aptible</h1>
    <div class="col-sm-4">
      <div class="why-item">
        <div class="why-icon {{why.lockin.className}}">
          <img src="{{why.lockin.logo}}" />
        </div>
        <div class="why-description fact-item">
          <h4>{{why.lockin.title}}</h4>
          <div class="description">{{#markdown}}{{why.lockin.description}}{{/markdown}}</div>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="why-item">
        <div class="why-icon {{why.workflow.className}}">
          <img src="{{why.workflow.logo}}" />
        </div>
        <div class="why-description fact-item">
          <h4>{{why.workflow.title}}</h4>
          <div class="description">{{#markdown}}{{why.workflow.description}}{{/markdown}}</div>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="why-item">
        <div class="why-icon {{why.compliance.className}}">
          <img src="{{why.compliance.logo}}" />
        </div>
        <div class="why-description fact-item">
          <h4>{{why.compliance.title}}</h4>
          <div class="description">{{#markdown}}{{why.compliance.description}}{{/markdown}}</div>
        </div>
      </div>
    </div>
  </div>

  <div class="row section workflow-cta">
    <div class="col-md-6 col-md-offset-1 col-sm-12">
      {{> ci_console}}
    </div>
    <div class="col-md-3 col-md-offset-1 col-sm-12">
      <div class="home-cta-body">
        <h3>Like Heroku?</h3>
        <h2>You'll Love Aptible</h2>
        <a class="btn btn-primary btn-lg" href="/pricing">Choose Your Account Type</a>
        <div class="plan-info">Heroku is a trademark of Heroku, Inc. Aptible is not affiliated with Heroku in any way.
        </div>
      </div>
    </div>
  </div>

  <div class="row section">
    <div class="col-sm-12">
      <div class="panel panel-default why-aptible-panel">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-6 col-sm-12">
              <div class="how-aptible-works">
                <h1>{{how.h1}}</h1>
                <div class="how-description">{{#markdown}}{{how.p1}}{{/markdown}}</div>
                <ul class="how-ctas">
                  {{#each how.ctas}}
                    <li><a href="{{href}}">{{title}}</a></li>
                  {{/each}}
                </ul>
              </div>
            </div>
            <div class="col-md-6 col-sm-12 aptible-tools">
              <div class="tools-carousel">
                {{#each how.tools.logos}}
                  <div class="tool logo">
                    <img src="{{url}}" class="{{className}}" />
                  </div>
                {{/each}}
              </div>
              <div class="tools-description row">
                <div class="col-sm-8 col-sm-offset-2">
                  <div class="fact-item">
                    <h4>{{how.tools.title}}</h4>
                    <div class="description">{{how.tools.description}}</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row home-newsletter-section">
    <div class="col-md-8 col-md-offset-2 col-sm-12">
      <div class="panel panel-default newsletter-signup-panel">
        <div class="panel-body">
          <h1 class="panel-title">{{newsletter.title}}</h1>
          <h5 class="panel-sub">{{newsletter.subtitle}}</h5>
          <div class="panel-cta">
           {{> newsletter_signup}}
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

{{#if customers.enabled}}
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="customers">
        <h1>Our Customers</h1>
        <div class="testimonials">
          {{#each customers}}
            <div class="testimonial">
              <div class="testimonial-body">&ldquo;{{testimonial}}&rdquo;</div>
              <div class="spacer"></div>
              <ul class="post-meta">
                <li><div class="gravatar sm"><img src="{{photo}}" /></div></li>
                <li class="author">{{name}}</li>
                <li class="date">{{title}} - {{customer_name}}</li>
              </ul>
            </div>
          {{/each}}
        </div>
        <div class="logos">
          <div class="row">
            {{#each customers}}
              <div class="col-sm-3">
                <div class="logo {{slugify customer_name}}">
                  <a href="{{url}}">
                    <img src="{{logo}}" />
                  </a>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}