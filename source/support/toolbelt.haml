          = partial "images/icons/osx.svg"
        .category-footer
          .category-title OSX

    .grid-item
      %a.category-box{ href: '#ubuntu', class: 'ubuntu' }
        .category-icon
          = partial "images/icons/ubuntu.svg"
        .category-footer
          .category-title Ubuntu

    .grid-item
      %a.category-box{ href: '#debian', class: 'debian' }
        .category-icon
          = partial "images/icons/debian.svg"
        .category-footer
          .category-title Debian

    .grid-item
      %a.category-box{ href: '#enterprise-linux', class: 'enterprise-linux' }
